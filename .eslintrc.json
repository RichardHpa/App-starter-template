{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["react-app", "plugin:react/recommended", "airbnb", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "jest", "react", "react-hooks"],
  "rules": {
    "prettier/prettier": [0],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/react-in-jsx-scope": [0]
  }
}
